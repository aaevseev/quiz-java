<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="311.0" prefWidth="723.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuizController">

    <HBox layoutX="10.0" layoutY="49.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="213.0" prefWidth="584.0" AnchorPane.leftAnchor="5.0"
          AnchorPane.rightAnchor="5.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">

        <GridPane layoutX="234.0" layoutY="100.0" prefWidth="703.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="55.0" minHeight="4.0" prefHeight="55.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="55.0" minHeight="4.0" prefHeight="55.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="55.0" minHeight="4.0" prefHeight="55.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="55.0" minHeight="4.0" prefHeight="55.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <RadioButton fx:id="firstChoice" mnemonicParsing="false" text="В 1799 году" wrapText="true"/>
                <RadioButton fx:id="secondChoice" mnemonicParsing="false" text="В 1789 году" wrapText="true"
                             GridPane.rowIndex="1"/>
                <RadioButton fx:id="thirdChoice" mnemonicParsing="false" text="В 1800 году" wrapText="true"
                             GridPane.rowIndex="2"/>
                <RadioButton fx:id="fourthChoice" mnemonicParsing="false" text="В 1801 году" wrapText="true"
                             GridPane.rowIndex="3"/>
            </children>
        </GridPane>
    </HBox>
    <StackPane layoutX="-1.0" layoutY="253.0" prefHeight="34.0" prefWidth="609.0" AnchorPane.leftAnchor="-1.0"
               AnchorPane.rightAnchor="3.0">

        <Button layoutX="206.0" layoutY="210.0" mnemonicParsing="false" onAction="#onNextQuestion"
                text="Следующий вопрос"/>
    </StackPane>

    <Label fx:id="textQuestion" alignment="CENTER" layoutX="13.0" layoutY="14.0" prefHeight="42.0" prefWidth="511.0"
           text="В каком году родился Пушкин Александр Сергеевич?" textAlignment="CENTER" AnchorPane.leftAnchor="5.0"
           AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="15.0"/>
    <padding>
        <Insets left="5.0" right="5.0"/>
    </padding>
</AnchorPane>
